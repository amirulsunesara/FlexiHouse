@using FlexiHouseFinal.Models;
@{
    ViewBag.Title = "OrderReview";
    Layout = "~/Views/Shared/_StepTwo.cshtml";
}

<br>
<div class="container">


    <div class="row bs-wizard" style="border-bottom:0;">

        <div class="col-xs-4 bs-wizard-step complete">
            <div class="text-center bs-wizard-stepnum">Step 1</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <a href="#" class="bs-wizard-dot"></a>
            <div class="bs-wizard-info text-center">Customer Details</div>
        </div>



        <div class="col-xs-4 bs-wizard-step complete">
            <!-- active -->
            <div class="text-center bs-wizard-stepnum">Step 2</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <a href="#" class="bs-wizard-dot"></a>
            <div class="bs-wizard-info text-center">Order Details</div>
        </div>


        <div class="col-xs-4 bs-wizard-step active">
            <!-- active -->
            <div class="text-center bs-wizard-stepnum">Step 3</div>
            <div class="progress"><div class="progress-bar"></div></div>
            <a href="#" class="bs-wizard-dot"></a>
            <div class="bs-wizard-info text-center">Review Order</div>
        </div>

    </div>





</div>
<hr>
<div class="right_col" role="main">
    
    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">

                    <div class="x_content">

                        <div class="form-group">
                            <div class="col-md-10">


@{ 
    Customer customer = (Customer)Session["customerRecord"];
    List<Item> items = (List<Item>)Session["orderRecord"];
}


                                <div class="col-lg-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading">
                                            Customer Details
                                        </div>
                                        <div class="panel-body">
                                           
                                                <label style="font-weight:bold;" class="control-label" for="name">
                                                    Full Name<span class="required"> : </span>
                                                </label>
                                                
                                                   <label class="control-label">@customer.fullName</label>
                                                <br>
                                            
                                           
                                            <label style="font-weight:bold;" class="control-label" for="name">
                                                Email<span class="required"> : </span>
                                            </label>
                                       <label class="control-label">@customer.email</label>
                                           
                                            <br>
                                     
                                            <label style="font-weight:bold;" class="control-label" for="name">
                                                Contact No<span class="required"> : </span>
                                            </label>
                                              
                                                    <label class="control-label">@customer.contact</label>
                                           
                                       
                                            <br>

                                            <label style="font-weight:bold;" class="control-label" for="name">
                                                Organization Name<span class="required"> : </span>
                                            </label>    
                                           
                                            <label class="control-label">@customer.organizationName</label>
                                                 <br>                                      

                                            <label style="font-weight:bold;" class="control-label" for="name">
                                                Organization Address<span class="required"> : </span>
                                            </label>     
                                                    <label class="control-label">@customer.organizationAddress</label>
                                               
                                           <br>
                                       

                                            <label style="font-weight:bold;" class="control-label" for="name">
                                                Selected Warehouse<span class="required"> : </span>
                                            </label>
                                                
                                                    <label class="control-label">@Session["warehouseName"].ToString()</label>
                                                
                                          

                                        


                                        </div>
                                        <div class="panel-footer">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="panel panel-success">
                                        <div class="panel-heading">
                                           Order Details
                                        </div>
                                        <div class="panel-body">
                                            @foreach (Item it in items)
                                            {
                                               
                                                
                                                <label class="control-label"> @it.Manufacturer<label>x</label> @it.itemName</label>
                                                <br>
                                            }



                                        </div>
                                        <div class="panel-footer">

                                        </div>
                                    </div>
                                </div>







                             
                             
                                <br><br>
                                <button type="button" onclick="history.back()" class="btn btn-primary">Go Back</button> <a id="reviewComplete" class="btn btn-success" href="~/Order/CompleteOrder">Complete Order</a>
                            </div>
                        </div>
                        <br>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
