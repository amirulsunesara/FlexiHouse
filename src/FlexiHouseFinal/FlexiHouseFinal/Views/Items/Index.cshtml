@model IEnumerable<FlexiHouseFinal.Models.Item_Warehouse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<br /><br />
<h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> Consignments </h3>
<hr>
<div class="col-lg-12">
    <div class="panel panel-success">
        <div class="panel-heading">
            Items Details
        </div>
        <div class="panel-body">

            <table class="table table-bordered">
                <tr>
                    <th>
                       Item Name
                    </th>
                    <th>
                        Manufacturer
                    </th>
                    <th>
                        Country
                    </th>
                    <th>
                       Item Code
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        View/Add Details
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                           
                            @Html.DisplayFor(modelItem => item.Item.itemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.Manufacturer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.itemCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.quantity)
                        </td>
                        <td>
                            <a class="btn btn-success" href="/Items/ItemDetails/@item.itemId">View/Add Details</a>
                        </td>                       
                    </tr>
                }

            </table>


        </div>
        <div class="panel-footer">

        </div>
    </div>
</div>

