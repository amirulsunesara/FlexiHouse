@model FlexiHouseFinal.Models.Item

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    

    <div class="row" style="width:900px;">
        <div class="col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i> Add an Item



                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                   

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                          
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.itemName,"Item Name:", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.itemName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                          
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Manufacturer,"Manufacturer:", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Manufacturer, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Country,"Country:" ,htmlAttributes: new { @class = "control-label" })
                           @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.CountryList,"Select Country" ,htmlAttributes: new { @class = "form-control tbLength" } ) 
                               
                                 @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                          
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.itemCode,"Item Code:", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.itemCode, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.itemCode, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                           
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.Category,"Category:" , htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Create Item" class="btn btn-default" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- /.panel-body -->
        </div>

    </div>







}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
