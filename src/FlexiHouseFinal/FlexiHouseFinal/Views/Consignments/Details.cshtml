@model FlexiHouseFinal.Models.Consignment
@using FlexiHouseFinal.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<br>
<!-- /.row -->
<div class="row">
   

    <!-- /.col-lg-4 -->
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Consignment Details
            </div>
            <div class="panel-body">

                <dl class="dl-horizontal" >


                    <dt>
                       Supplier Name :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.supplier)
                    </dd>

                    <dt>
                       Total Items :
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.totalItems)
                    </dd>

                    <dt>
                       Arrival Date :
                    </dt>

                    <dd>
                        @Model.arrivalDate.Value.ToShortDateString()
                   
                    </dd>

                </dl>


            </div>
            <div class="panel-footer">
              
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Consignment Items
            </div>
            <div class="panel-body">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Quanitity</th>
                            <th>Expiry Date</th>
                            <th>Product Code</th>
                            <th>Manufacturer</th>
                            <th>Country</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="TextBoxesGroup">

                        @{int count = 1;
                            List<Item_Consignment> ic = ViewBag.ItemDetails;

                        }
                        @{
                            try
                            {
                                foreach (var item in ic)
                                {
                                    <tr>
                                        @{ var itemName = "txtItemName" + count;
                                            var identity = "r" + count;
                                        }
                                        <td>@item.Item.itemName</td>
                                    
                                        <td>@item.quantity</td>
                                  
                                        <td>@try
                                        {@item.expiry.Value.ToShortDateString()}
                                        catch (Exception ex) { }
                                         </td>
                                   
                                        <td>@item.Item.itemCode</td>
                                   
                                        <td>@item.Item.Manufacturer</td>
                                   
                                        <td>@item.Item.Country</td>
                                     
                                        @{ count++;}
                                    </tr>
                                                }
                                            }
                                            catch (Exception ex)
                                            {



                                            }
                        }
                    </tbody>
                </table>


            </div>
            <div class="panel-footer">
              
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Slotting Instructions
            </div>
            <div class="panel-body">

          <ul class="list-group">
              
              @foreach(var a in ViewBag.Instructions)
              {

                  <li class="list-group-item">@a </li>

              }

         </ul>


            </div>
            <div class="panel-footer">
                <a href="/Consignments/Index" class="btn btn-default">Back to Consignments</a>
            </div>
        </div>
    </div>
    <!-- /.col-lg-4 -->
</div>
<!-- /.row -->

























