
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<br /><br />
<h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> Consignments </h3>
<hr>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="col-lg-14">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-shopping-bag"></i> Add a Consignment



                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
               


                    <form id="ConsignmentForm">
                        <div class="form-horizontal">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="control-label">Consignment No:</label>&nbsp;  <strong> <label id="consignmentNumber"></label></strong>

                                </div>

                                <div class="col-md-10">
                                    <label class="control-label">Supplier Name:</label>
                                    <input type="text" id="txtSupplierName" class="form-control tbLength" required />

                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-10">
                                    <label class="control-label">Arrival Date:</label>
                                    <input type="date" class="datepicker tbLength form-control" id="txtArrivalDate" readonly="true" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label class="control-label">Consignment Items</label>&nbsp;
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Item Name</th>
                                                <th>Quanitity</th>
                                                <th>Expiry Date</th>
                                                <th>Product Code</th>
                                                <th>Manufacturer</th>
                                                <th>Country</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="TextBoxesGroup">
                                            <tr>
                                                <td><input type="text" id="txtItemName1" name="itemName" class="form-control r1"></td>
                                                <td><input type="number" min="1" id="txtQuantity1" name="itemQuantity" class="form-control r1" required></td>
                                                <td><input type="date" id="txtExpiryDate1" name="expiryDate" class="form-control datepicker r1"></td>
                                                <td><input type="text" id="txtProductCode1" name="productCode" class="form-control r1" required></td>
                                                <td><input type="text" id="txtManufacturer1" name="itemManufacturer" class="form-control r1" required></td>
                                                <td><select type="text" id="txtCountry1" name="itemCountry" class="form-control r1" required></select></td>

                                            </tr>

                                        </tbody>
                                    </table>
                                    <button id="addButton" class="btn btn-default">+ Add More Items</button><input style="visibility:hidden" type="text" id="currentCount" value="2" />
                                </div>
                            </div>
                            <input type="hidden" id="hfCustomer" name="CustomerId" />

                            <hr>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <button class="btn btn-success" id="btnSaveConsignment">Save Consignment</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>


    </div>




}
<br/>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>