@model FlexiHouseFinal.Models.UserAccount

@{
    ViewBag.Title = "Register";


}

<center><img style="height:8cm;" src="~/images/newLogo.png"></center>



<div class="row">
    <div class="col-sm-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-box">
            <div class="form-top">
                <div class="form-top-left">
                    <h3>Login to our site</h3>
                    <p>Enter username and password to log on:</p>
                </div>

                <div class="form-top-right">
                    <i class="fa fa-key"></i>
                </div>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { }))
            {

                @Html.AntiForgeryToken()
                <div class="form-bottom">
                    <strong style="color:red">  @Html.ValidationMessage("keyName")</strong>
                    <form role="form" action="" method="post" class="login-form">
                        <div class="form-group">
                            <label class="sr-only" for="form-username">Username</label>

                            @Html.EditorFor(model => model.login.UserName, new { htmlAttributes = new { @class = "form-username form-control", placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.login.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="form-password">Password</label>
                            @Html.EditorFor(model => model.login.Password, new { htmlAttributes = new { @class = "form-password form-control", placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.login.Password, "", new { @class = "text-danger" })
                        </div>
                        <button style="width:100%;" type="submit" class="btn">Sign in!</button>
                    </form>
                </div>
            }
        </div>



    </div>

    <div class="col-sm-1 middle-border"></div>
    <div class="col-sm-1"></div>

    <div class="col-sm-5">

        <div class="form-box">
            <div class="form-top">
                <div class="form-top-left">
                    <h3>Sign up now</h3>
                    <p>Fill in the form below to get instant access:</p>
                </div>
                <div class="form-top-right">
                    <i class="fa fa-pencil"></i>
                </div>
            </div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { }))
            {

                @Html.AntiForgeryToken()
                <div class="form-bottom">
                    <strong style="color:red">  @Html.ValidationMessage("keyName2")</strong>
                    <form role="form" action="" method="post" class="registration-form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @if (ViewBag.Message != null)
                        {
                            <div class="form-group"><div class="col-md-10" style="color:green;">@ViewBag.Message</div></div>


                        }
                        <div class="form-group">
                            <label class="sr-only" for="form-first-name">First name</label>
                            @Html.EditorFor(model => model.signUp.Name, new { htmlAttributes = new { @class = "form-first-name form-control", placeholder = "Full Name" } })
                            @Html.ValidationMessageFor(model => model.signUp.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="form-email">Email</label>
                            @Html.EditorFor(model => model.signUp.Email, new { htmlAttributes = new { @class = "form-email form-control ", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.signUp.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="sr-only" for="form-username">Username</label>

                            @Html.EditorFor(model => model.signUp.UserName, new { htmlAttributes = new { @class = "form-username form-control", placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.signUp.UserName, "", new { @class = "text-danger" })
                        </div>
                        <button style="width:100%;" type="submit" class="btn">Sign me up!</button>
                    </form>
                </div>
            }
        </div>

    </div>
</div>












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}












