

@{
    ViewBag.Title = "Home Page";


    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    
}


<div class="row">

    
    <!-- /.col-lg-8 -->
    <div class="col-lg-7">
        <div class="panel panel-default"  style="position:fixed;">
            <div class="panel-heading">
                <i class="fa fa-bell fa-fw"></i> Model


                <div style="float:right;  margin-right:10px; ">
                  

                    <button id="btnSave" style="padding: 2px 6px;"  class="btn btn-success" >Save</button>


                    <button id="btnDelete" style="padding: 2px 6px;"  class="btn btn-danger">Delete</button>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body zoomViewport">

                <div id="droppable" style="border:1px solid black; width:17cm;  height:16cm;"  class="list-group zoomContainer" >
                    @if (ViewBag.HtmlStr == null)
                    {

                        <div class="modal fade" id="myModal">

                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header" style="background-color:cornflowerblue;">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                            ×
                                        </button>
                                        <h4 class="modal-title" id="myModalLabel">
                                            Getting Started with FlexiHouse
                                        </h4>
                                    </div>
                                    <div class="modal-body">
                    <h5>Please Enter Following to Proceed</h5>
                                        <div class="row">
                                            <div class="col-md-12" style="border-right: 1px dotted #C2C2C2;padding-right: 30px;">
                                                <!-- Nav tabs -->
                                                <div id="tabs-container">
                                                    <!----
                                                    <ul class="tabs-menu">
                                                        <li class="current"><a href="#tab-1">Tab 1</a></li>
                                                        <li><a href="#tab-2">Tab 2</a></li>
                                                        <li><a href="#tab-3">Tab 3</a></li>
                                                        <li><a href="#tab-4">Tab 4</a></li>
                                                    </ul>
                                                        -->
                                                    <div class="tab">
                                                        
                                                        <div id="tab-1" class="tab-content">
                                                            <form role="form" class="form-horizontal">
                                                                <div class="form-group">

                                                                    <label for="wLength" class="col-sm-2 control-label">
                                                                        Warehouse Length (meters)
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="wLength" placeholder="Length in Meters" required />
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="wWidth" class="col-sm-2 control-label">
                                                                        Warehouse Width (meters)
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="wWidth" placeholder="Width in Meters" required />
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-sm-2">
                                                                    </div>
                                                                 <hr>



                                                                    <label for="sLength" class="col-sm-2 control-label">
                                                                        Shelve Length (meters)
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="sLength" placeholder="Length in Meters" required />
                                                                    </div>
                                                                    
                                                                </div>
                                                                <br />
                                                                <div class="form-group">
                                                                    <label for="sWidth" class="col-sm-2 control-label">
                                                                        Shelve Width (meters)
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="sWidth" placeholder="Width in Meters" required />
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="sHeight" class="col-sm-2 control-label">
                                                                        Shelve Height (meters)
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="sHeight" placeholder="Height in Meters" required />
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="sRows" class="col-sm-2 control-label">
                                                                        Shelve Rows
                                                                    </label>
                                                                    <div class="col-sm-10">
                                                                        <input type="number" min="1" class="form-control-static" style="width:5cm;" id="sRows" placeholder="No. of Rows" required />
                                                                    </div>
                                                                </div>




                                                                <div class="row">
                                                                    <div class="col-sm-2">
                                                                    </div>
                                                                    <div class="col-sm-10">
                                                                        
                                                                           
                                                                            <button id="btnSaveMe" class="btn btn-primary">Save</button>

                                                                        


                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                                                    </div>


                                                </div>
                                                <!-- Tab panes -->

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>



                     //  @Scripts.Render("~/bundles/script")
                    }
                    else
                    {

                        @Html.Raw(ViewBag.HtmlStr)

                       

                    }
                </div>


            </div>
        </div>
        <!-- /.panel-body -->
    </div>


    <div class="col-lg-4">
        <div class="panel panel-default"  style="position:fixed; float:left;">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> Tool Box
                <div style="float:right;  margin-right:10px; ">
                   


                    <a id="btnDelete" href="/Account/Settings" style="padding: 2px 6px;" class="btn btn-primary">Settings</a>
                </div>

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div style="width:8cm; height:16cm;">
             
                        <button class="acc">Shelves <span style="float:right;" class="fa fa-chevron-down"></span></button>
                        <div class="pan">
                            <br />
                            <div class="form-group">

                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline1" value="option1" checked>Horizontal
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" value="option2">Vertical
                                </label>
                                &nbsp;&nbsp;
                                <br /><br />
                                <button id="btnShelves" class="btn btn btn-success">Generate</button>

                            </div>
                        </div>
                        <button class="acc">Depot <span style="float:right;" class="fa fa-chevron-down"></span></button>
                        <div class="pan">
                            <br />
                            <button id="btnDepot" class="btn btn btn-success">Generate</button>
                            <br /><br />
                        </div>

                        <button class="acc">Walls <span style="float:right;" class="fa fa-chevron-down"></span></button>
                        <div class="pan">
                            <div class="form-group">
                                <br />
                                <label class="radio-inline">
                                    <input type="radio" id="opt1" name="optionsRadiosInlin" value="option1" checked>Horizontal
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="optionsRadiosInlin" value="option2" id="opt2">Vertical
                                </label>
                                &nbsp;&nbsp;
                                <br /><br />
                                <button id="btnWalls" class="btn btn btn-success">Generate</button>
                                <br /><br />
                            </div>

                        </div>

                        <button class="acc">Office <span style="float:right;" class="fa fa-chevron-down"></span></button>
                        <div class="pan">
                            <br />
                            <button id="btnOffice" class="btn btn btn-success">Generate</button>
                            <br />
                        </div>
</div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        <!-- /.panel -->
        <!-- /.panel -->
    </div>
</div>
