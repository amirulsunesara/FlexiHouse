@model FlexiHouseFinal.Models.UserAccount
@using FlexiHouseFinal.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_WorkerLayout.cshtml";
}


<br /><br />
<h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> Profile </h3>
<hr>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               
              

                <div style="float:right;  margin-right:10px; ">


                    <a id="" style="padding: 2px 6px;" class="btn btn-success" href="/Worker/EditProfile/@Model.UserID">Edit Profile</a>


                </div><br>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @{ Worker worker = ViewBag.Worker;
                    WarehouseDBEntities wde = new WarehouseDBEntities();
                    UserAccount useracc = wde.UserAccounts.Find(worker.warehouseId);
                    Warehouse warehouse = wde.Warehouses.Where(a=>a.managerId==useracc.UserID).Single();

                }
             <h3 style="font-weight:bold;display:inline-block;">Name:</h3>&nbsp;&nbsp; <h3 style="position:absolute; display:inline-block;">@Model.Name</h3><br>
                <h3 style="font-weight:bold;display:inline-block;">Email:</h3>&nbsp;&nbsp; <h3 style="position:absolute; display:inline-block;">@Model.Email</h3><br>
                <h3 style="font-weight:bold;display:inline-block;">Contact:</h3>&nbsp;&nbsp; <h3 style="position:absolute; display:inline-block;">@Model.Contact</h3><br>
                <h3 style="font-weight:bold;display:inline-block;">Registered on:</h3>&nbsp;&nbsp; <h3 style="position:absolute; display:inline-block;">@Model.Registered</h3><br><br>
                <h3 style="font-weight:bold;display:inline-block;">Warehouse Name:</h3>&nbsp;&nbsp; <h3 style="position:absolute; display:inline-block;">@warehouse.warehouseName</h3><br>
                <h3 style="font-weight:bold;display:inline-block;">Assigned Shelfs:</h3>&nbsp;&nbsp; @foreach(var a in Newtonsoft.Json.JsonConvert.DeserializeObject<List<String>>(worker.assignedShelfs)) {<h3 style="display:inline-block;">@a,&nbsp;</h3>}<br>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>

</div>