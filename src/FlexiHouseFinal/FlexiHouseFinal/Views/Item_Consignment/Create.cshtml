@model FlexiHouseFinal.Models.Item_Consignment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="row" >
        <div class="col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i> Add a Consignment


                 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="container">
                        <div class="row">
                            <br />
                            <div class="col-md-10">
                                <div class="progress">
                                    <div class="one primary-color"></div><div class="three primary-color"></div>
                                    <div class="progress-bar" style="width: 100%;"></div>
                                </div>
                              
                            </div>
                        </div>
                    </div>

<hr>

                    <div class="form-horizontal">
                         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.LabelFor(model => model.consignmentId, "Consignment ID:", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("consignmentId", null, htmlAttributes: new { @class = "form-control tbLength" })
                                @Html.ValidationMessageFor(model => model.consignmentId, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                         
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.itemId, "Item Name:", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownList("itemId", null, htmlAttributes: new { @class = "form-control tbLength" })
                                @Html.ValidationMessageFor(model => model.itemId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       

                        <div class="form-group">
                          
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.quantity,"Quantity:", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                         
                            <div class="col-md-10">
                                @Html.LabelFor(model => model.expiry,"Expiry Date:", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.expiry, new { htmlAttributes = new { @class = "form-control tbLength" } })
                                @Html.ValidationMessageFor(model => model.expiry, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                    </div>


                </div>
            </div>
            <!-- /.panel-body -->
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}


